{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<div class="row text-center mt-5 mb-5 rounded py-5 bx-meteor text-white">
		<h1>Recette Magique</h1>
		<h4>Un enchantement culinaire dans chaque bouch√©e!</h4>
	</div>

	<hr>

	<div class="row justify-content-center">

		<h4 class="text-center">Les derniers recettes</h4>

		{% for item in articles %}
			<div class="card text-bg-dark m-3 col-md-3">
				<img src="{{ asset('images/articles') }}/{{ item.image }}" class="card-img" alt="{{ item.title }}">
				<div class="card-img-overlay">
					<h5 class="card-title">{{ item.title }}</h5>
					<p class="card-text">{{ item.content|slice(0, 45) }}...</p>
					<a href={{ path('article', { id: item.id }) }} class="btn btn-warning rounded-pill btn-sm">Lire l'article</a>
					<p class="card-text">
						<small>{{ item.category.name }}</small>
					</p>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
